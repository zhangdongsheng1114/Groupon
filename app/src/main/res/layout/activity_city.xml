<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_city_layout" />

    <include layout="@layout/city_search_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_city_cities"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.tarena.groupon.view.MyLetterView
            android:id="@+id/mlv_city"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            app:letter_color="#ff0000ff" />
    </FrameLayout>
</LinearLayout>