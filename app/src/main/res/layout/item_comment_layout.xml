<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.tarena.groupon.view.CircleImageView
        android:id="@+id/iv_comment_item_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_comment_item_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="XXXXX"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_comment_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="06-14"
                android:textColor="#ff3f3f3f"

                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_comment_item_rating"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/movie_star50" />

            <TextView
                android:id="@+id/tv_comment_item_avg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="￥100元/人"
                android:textColor="#ff6e6e6e"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="三里屯三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅三里屯火锅火锅"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_comment_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_comment_item_img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/bucket_no_picture"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_comment_item_img2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/bucket_no_picture"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_comment_item_img3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bucket_no_picture"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>